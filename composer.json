{
    "name": "superniftydev/laravel-superniftycms",
    "description": "A CMS package for Laravel.",
    "keywords": [
        "Supernifty",
        "laravel",
        "laravel-cms"
    ],
    "homepage": "https://github.com/superniftydev/laravel-superniftycms",
    "license": "MIT",
    "authors": [
        {
            "name": "Ed Hepburn",
            "email": "ed@supernifty.com",
            "role": "Developer"
        }
    ],
     "require": {
        "php": "^8.2",
        "illuminate/contracts": "^10.0|^11.0",
        "intervention/image": "^3.7",
        "maestroerror/php-heic-to-jpg": "^1.0",
        "php-ffmpeg/php-ffmpeg": "^1.1",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Supernifty\\CMS\\": "src/",
            "Supernifty\\CMS\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Supernifty\\CMS\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-supernifty-cms --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Supernifty\\CMS\\CMSServiceProvider"
            ],
            "aliases": {
                "CMS": "Helpers"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
